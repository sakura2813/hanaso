<!-- app/views/symptoms/show.html.erb -->
<div class="max-w-3xl mx-auto p-4 md:p-6 space-y-6">
  <%= link_to "← 一覧へ", symptoms_path, class: "text-sm text-gray-600 hover:underline" %>

  <header>
    <h1 class="text-2xl md:text-3xl font-bold"><%= @symptom.title %></h1>
    <% if @symptom.summary.present? %>
      <p class="mt-2 text-gray-700"><%= simple_format(@symptom.summary) %></p>
    <% end %>
  </header>

  <section class="bg-white rounded-2xl shadow p-5">
    <h2 class="text-xl font-semibold">おうちケアのポイント</h2>
    <div class="mt-2 prose max-w-none"><%= simple_format(@symptom.home_care) %></div>
  </section>

  <section class="bg-white rounded-2xl shadow p-5">
    <h2 class="text-xl font-semibold">チェックポイント</h2>
    <div class="mt-2 prose max-w-none"><%= simple_format(@symptom.checkpoints) %></div>
  </section>

  <section class="grid gap-4 md:grid-cols-2">
    <div class="bg-white rounded-2xl shadow p-5">
      <h3 class="text-lg font-semibold">すぐに受診</h3>
      <div class="mt-2"><%= simple_format(@symptom.visit_immediate) %></div>
    </div>
    <div class="bg-white rounded-2xl shadow p-5">
      <h3 class="text-lg font-semibold">診療時間内に受診</h3>
      <div class="mt-2"><%= simple_format(@symptom.visit_hours) %></div>
    </div>
  </section>
</div>

